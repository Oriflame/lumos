{
  "name": "@oriflame/config-jest",
  "version": "5.0.0",
  "description": "Reusable Jest config.",
  "keywords": [
    "lumos",
    "config",
    "jest"
  ],
  "main": "./lib/index.js",
  "types": "./dts/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:Oriflame/lumos.git"
  },
  "author": "Silhan Jan",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.17.0",
    "npm": ">=6.13.0"
  },
  "files": [
    "bootstrap/*",
    "dts/**/*.d.ts",
    "lib/**/*.{js,map,d.ts}",
    "lib/**/*.{js,map}",
    "mocks/*",
    "serializers/*",
    "setup/*",
    "src/**/*.{ts,tsx,json}",
    "transformers/*"
  ],
  "dependencies": {
    "@babel/core": "^7.16.5",
    "@beemo/driver-jest": "^2.0.4",
    "@oriflame/lumos-common": "^5.0.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@types/jest": "^27.0.3",
    "dom-storage": "^2.1.0",
    "graphql": "^16.2.0",
    "graphql-tag": "^2.12.6",
    "jest-preset-oriflame": "^5.0.0"
  },
  "devDependencies": {
    "@beemo/core": "^2.1.3",
    "@beemo/driver-babel": "^2.0.5",
    "jest": "^27.4.5"
  },
  "peerDependencies": {
    "@beemo/core": "^2.1.2",
    "@beemo/driver-babel": "^2.0.4",
    "jest": "^27.4.3",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@testing-library/react": ">=12"
  },
  "packemon": {
    "format": "lib",
    "platform": "node"
  }
}
