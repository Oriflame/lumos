{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "group:monorepos",
    ":semanticCommitScopeDisabled"
  ],
  "commitMessageSuffix": ".",
  "major": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "semanticCommitType": "deps",
  "prCreation": "immediate",
  "npm": {
    "enabled": true
  },
  "semanticCommits": "enabled",
  "updateLockFiles": true
}

