{
  "private": true,
  "name": "lumos-root",
  "version": "0.0.0",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript --build --reference-workspaces",
    "test": "yarn run build && yarn run jest && yarn run eslint",
    "eslint": "beemo eslint .",
    "jest": "beemo jest",
    "prettier": "beemo prettier \"./packages/**/*.{ts,js}\"",
    "prerelease": "yarn run test && yarn run build",
    "release": "beemo run-script auto-release"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rajzik/lumos.git"
  },
  "author": "Silhan Jan",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "beemo": {
    "module": "@rajzik/lumos",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "env": {
        "node": true
      },
      "rules": {
        "import/prefer-default-export": "off"
      },
      "ignore": [
        "*.config.js"
      ]
    },
    "prettier": {
      "ignore": [
        "*.ejs"
      ]
    },
    "typescript": {
      "exclude": [
        "*.test.ts"
      ]
    }
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "husky": "^3.1.0",
    "lerna": "^3.20.0"
  }
}
